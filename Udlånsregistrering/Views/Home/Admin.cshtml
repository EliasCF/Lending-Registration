            <div class="vertical-center">
                <h1 class="text-left">Ledige computere</h1>
                <table class="table table-striped table-hover" style="margin-bottom: 100px;" id="loans-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Navn</th>
                            <th>Brand</th>
                            <th>Muse navn</th>
