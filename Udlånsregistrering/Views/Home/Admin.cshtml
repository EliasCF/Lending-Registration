@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<section class="panel" data-section-name="my-loans">
    <ul class="menu-pagination">
        <li class="active-section"><a href="#loan-list">Lån</a></li>
        <li><a href="#expired">Overskridelser</a></li>
        <li><a href="#blacklist">Blackliste</a></li>
    </ul>
    <div class="inner container">
        <div class="vertical-center">
            <h1 class="text-left">Låneliste</h1>
            <table class="table table-striped table-hover" style="margin-bottom: 100px;" id="loans-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Computer</th>
                        <th>ComputerId</th>
                        <th>Lånedag</th>
                        <th>Udlåbsdag</th>
                    </tr>
                </thead>
                <tbody id="loan-table-rows"></tbody>
            </table>
            <button class="check-out-button">Check ud</button>
        </div>
    </div>
</section>
<section class="panel" data-section-name="loans">
    <div class="inner text-center">
