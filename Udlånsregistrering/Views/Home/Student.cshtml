@model string

@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<input type="hidden" id="userId" value="@Html.Raw(Model)" />

<section class="panel" data-section-name="my-loans">
    <ul class="menu-pagination">
        <li class="active-section"><a href="#my-loans">Mine lån</a></li>
        <li><a href="#loans">Lån</a></li>
    </ul>
    <div class="inner container">
        <div class="vertical-center">
            <h1 class="text-left">Mine Lån</h1>
            <table class="table table-striped table-hover" style="margin-bottom: 100px;" id="loans-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Navn</th>
                        <th>Lånedag</th>
                        <th>Udlåbsdag</th>
                    </tr>
                </thead>
                <tbody id="loan-table-rows"></tbody>
            </table>
            <button class="check-out-button">Check ud</button>
        </div>
    </div>
</section>
<section class="panel" data-section-name="loans">
    <div class="inner text-center">
        <div class="inner container">
            <div class="vertical-center">
                <h1 class="text-left">Ledige computere</h1>
                <div class="row">
                    <div class="col-sm-6">
                        <h6>Fra</h6>
                        <input type="datetime-local" id="from-date" />
                    </div>
                    <div class="col-sm-6">
                        <h6>Til</h6>
                        <input type="datetime-local" id="to-date" />
                    </div>
                </div>
                <table class="table table-striped table-hover" style="margin-bottom: 100px;" id="loans-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Navn</th>
                            <th>Brand</th>
                            <th>Muse navn</th>
                            <th>Muse type</th>
                            <th>Muse brand</th>
                        </tr>
                    </thead>
                    <tbody id="unreserved-table-rows"></tbody>
                </table>
                <button class="reserve-button">Check ud</button>
            </div>
        </div>
    </div>
</section>

@section  Scripts {
    <script src="~/lib/scrollify/jquery.scrollify.js"></script>
    <script src="~/js/home/student.js"></script>
    <script>
        $.get('/api/loanedComputer/user/' + '@Html.Raw(Model)', (result) => {
            result.forEach((item, i) => {
                $('#loan-table-rows').append(`
                    <tr id="row-${i}">
                        <td><input type="checkbox" value="${item.id}" name="${i}" class="forDeletion"></td>
                        <td>${item.computer.name}</td>
                        <td>${item.loaned_Date.replace('T', ' ')}</td>
                        <td>${item.loanExpiration_Date.replace('T', ' ')}</td>
                    </tr>`);
            });
        });

        $.get('/api/computer/unreserved', (result) => {
            result.forEach((item, i) => {
                $('#unreserved-table-rows').append(`
                    <tr id="row-${i}">
                        <td><input type="checkbox" value="${item.id}" name="${i}" id="check-${i}" class="forAdding" onClick="validateNumber(this)"></td>
                        <td>${item.name}</td>
                        <td>${item.model.brand.brand_Name}</td>
                        <td>${item.mouse.name}</td>
                        <td>${item.mouse.type}</td>
                        <td>${item.mouse.brand.brand_Name}</td>
                    </tr>`);
            });
        });
    </script>
}

@section  Styles {
    <link rel="stylesheet"  href="~/css/home/student.css"/>
}